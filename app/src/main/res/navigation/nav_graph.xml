<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/sign_in_fragment_dest">

    <fragment
        android:id="@+id/sign_in_fragment_dest"
        android:name="com.example.noteappv2.ui.fragment.SignInFragment"
        android:label="Sign In" >

        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/sign_up_fragment_dest" />

        <action
            android:id="@+id/action_signInFragment_to_notesListFragment"
            app:destination="@id/note_list_fragment_dest">
        </action>

    </fragment>

    <fragment
        android:id="@+id/sign_up_fragment_dest"
        android:name="com.example.noteappv2.ui.fragment.SignUpFragment"
        android:label="Sign Up" >

        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/sign_in_fragment_dest"
            app:launchSingleTop="true"
            app:popUpTo="@id/sign_in_fragment_dest"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/note_list_fragment_dest"
        android:name="com.example.noteappv2.ui.fragment.NotesListFragment"
        android:label="Notes list fragment" >

    </fragment>

</navigation>